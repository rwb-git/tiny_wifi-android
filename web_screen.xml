<?xml version="1.0" encoding="utf-8"?>




<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <android.support.v7.widget.Toolbar
        android:id="@+id/logs_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        >

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/webscrl"
        android:layout_width="match_parent"

        android:layout_height="0dp"

        android:layout_weight="30"
        >
    <TextView
        android:id="@+id/webtxt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="18sp"

        android:paddingLeft="20dp"
        />

    </ScrollView>
    <!--
     android:layout_margin="20dp"
     margin is outside the view. padding is inside the view. view with contrasting background makes it easy to see -->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        >
        <Button
            android:id="@+id/upload"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="upload to web"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/load_file21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="local files"
            android:textSize="18sp"
            />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        >
        <Button
            android:id="@+id/browse_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="browse mode"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/bt73"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="design"
            android:textSize="18sp"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        >
        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="delete from web"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/save_web_file"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="save web file"
            android:textSize="18sp"
            />
    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        >

        <Button
            android:id="@+id/next"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="18"
            android:text="get web +"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/previous"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="18"
            android:text="get web -"
            android:textSize="18sp"
            />


        <Button
            android:id="@+id/esp_config"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="18"
            android:text="esp config"
            android:textSize="18sp"
            />
    </LinearLayout>








</LinearLayout>